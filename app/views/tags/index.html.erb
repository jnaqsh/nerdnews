<%- model_class = Tag.new.class -%>
<div class="row page-header">
  <% if can? :create, Tag %>
    <%= link_to t('.new', :default => t("helpers.links.new")), new_tag_path,
      class: 'btn btn-primary pull-left' %>
  <% end %>
  <h1>
    <%=t '.title', :default => model_class.model_name.human.pluralize %>
  </h1>
</div>

<div class = 'row'>
  <div class='span2'>
    <%= form_tag tags_path, method: :get, class: 'form-search' do %>
      <div class='row'>
        <%= text_field_tag :tag_search, params[:tag_search], class: "span2 search-query", placeholder: t(".search") %>
      </div>
    <% end %>
  </div>
</div>

<div class = 'row'>
  <div class='span12'>
    <ul class="thumbnails" id="tags-list">
      <% @tags.each do |tag| %>
        <li class="span2">
          <div class="thumbnail">
            <%= image_tag tag.thumbnail.url(:thumb), alt: tag.name %>
            <h4><%= link_to tag.name, stories_path(tag: tag.name) %></h4>

            <% if (can? :edit, Tag) or (can? :destroy, Tag) %>
            <p>
              <% if can? :edit, Tag %>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_tag_path(tag), :class => 'btn btn-mini' %>
              <% end %>

              <% if can? :destroy, Tag %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          tag_path(tag),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                          :class => 'btn btn-mini btn-danger' %>
              <% end %>
            </p>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<%= paginate @tags %>
